<Window x:Class="Wortfinder.WordMissingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wortfinder"
        mc:Ignorable="d"
        Title="Report Missing Word" Height="180" Width="300">
    <Grid>
        <Label Content="What word is missing?" HorizontalAlignment="Left" Height="28" Margin="19,19,0,0" VerticalAlignment="Top" Width="139" />
        <TextBox x:Name="ReportedWord" HorizontalAlignment="Left" Margin="19,52,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Height="27" />
        <Button x:Name="ReportButton" Content="Report!" HorizontalAlignment="Left" Height="31" Margin="19,84,0,0" VerticalAlignment="Top" Width="139" Click="ReportMissingWord" />
        <Grid Margin="10,120,10,10">
            <Label x:Name="SuccessMessage" Content="" HorizontalAlignment="Left" Margin="-3,0,0,0" VerticalAlignment="Center" Height="25" Width="273" />
        </Grid>
    </Grid>
</Window>
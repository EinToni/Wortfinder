<UserControl x:Class="Wortfinder.LetterBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wortfinder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Width="{Binding Path=Size}" Height="{Binding Path=Size}"
            Grid.Row="{Binding Path=Row}" Grid.Column="{Binding Path=Column}">
        <Rectangle x:Name="Background" Height="{Binding Size}" Width="{Binding Size}"
                   Fill="LightGray"/>
        <Viewbox Width ="{Binding Size}" Height="{Binding Size}"
                 VerticalAlignment="Center">
            <TextBlock x:Name="TextLetter"></TextBlock>
        </Viewbox>
        <Ellipse Height="{Binding Path=CircleSize}" Width="{Binding Path=CircleSize}" 
                 Canvas.Top="{Binding Path=CircleMargin}" Canvas.Left="{Binding Path=CircleMargin}"
                 Stroke="Black" Fill="Transparent"
                 PreviewMouseDown="ClickLetter"
                 MouseEnter="HoverLetter"/>
    </Canvas>
</UserControl>
